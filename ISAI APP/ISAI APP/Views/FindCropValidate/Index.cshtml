
@{
    ViewBag.Title = "Index";
}

<script src="~/Scripts/sweet-alert.js"></script>
<link rel="stylesheet" href="~/Content/sweetalert/sweet-alert.css">

<h2>Find, Crop & Validate</h2>

<hr />

<div class="row">
    <div class="col-md-6 col-md-push-2">
        <section>

            @using (Ajax.BeginForm("FileVerification", "FindCropValidate", null, new AjaxOptions()
            {
                LoadingElementId = "Loading"
            }, new { enctype = "multipart/form-data" }))
            {
                <div>
                    <br />
                    <div class="row">
                        <div class="col-md-12">

                            <div class="input-group">
                                <h4>Ingresa INE</h4>
                            </div>
                            <div class="form-group">
                                <input type="file" id="idFile" name="file" class="form-control">
                            </div>
                            <div class="form-group">
                                <input type="radio" id="INE" name="choose" value="INE" checked />
                                <label for="INE"><strong>INE (buscar firma en reverso)</strong></label>
                            </div>
                            <div class="form-group">

                                <input type="radio" id="DOCUMENTO" name="choose" value="DOCUMENTO" />
                                <label for="DOCUMENTO"><strong>DOCUMENTO (buscar sello del escudo mexicano)</strong></label>
                            </div>
                            <div class="form-group">
                                <button id="idButtonVerificar" type="submit" class="btn btn-info btn-block">Verificar</button>
                                <div id="Loading" class="col-md-2" style="display: none;">
                                    <img src="~/Content/ImagesApp/loading.gif" width="50" height="50" alt="Loading...">
                                </div>
                            </div>
                            <hr />
                            <div class="form-group mx-auto">
                                <a href="/Home" class="btn btn-danger col-md-6" style="text-decoration:none">Regresar</a>
                            </div>

                        </div>
                    </div>
                </div>
            }

        </section>
    </div>
</div>


<script>
    $("#idButtonVerificar").click(function (e) {
        if ($('#idFile').get(0).files.length === 0) {
            Swal.fire({
                type: 'error',
                title: 'Elige un formato válido de imagen.'
            })
            e.preventDefault(); // Cancel the submit
            return false;
        } else {
            $('#Loading').show();
        }
    });
</script>


